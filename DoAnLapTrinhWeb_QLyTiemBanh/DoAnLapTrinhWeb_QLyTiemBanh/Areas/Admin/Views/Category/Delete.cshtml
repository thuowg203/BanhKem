@model DoAnLapTrinhWeb_QLyTiemBanh.Models.Category

@{
    ViewData["Title"] = "Xóa Loại Sản Phẩm";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .delete-card {
        max-width: 500px;
        margin: 50px auto;
        border: 1px solid #f8d7da;
        border-radius: 12px;
        padding: 30px;
        background-color: #fff0f0;
        box-shadow: 0 4px 12px rgba(255, 138, 128, 0.2);
    }

    .delete-header {
        font-size: 1.5rem;
        color: #d9534f;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-message {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

    .category-name {
        font-weight: bold;
        font-size: 1.25rem;
        color: #dc3545;
        text-align: center;
        margin-bottom: 25px;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .alert {
        max-width: 500px;
        margin: 20px auto;
    }
</style>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Error"]
    </div>
}

<div class="delete-card">
    <div class="delete-header">@ViewData["Title"]</div>

    <div class="delete-message">
        Bạn có chắc chắn muốn xóa loại sản phẩm sau?
    </div>

    <div class="category-name">
        @Model.TenLoai
    </div>

    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
