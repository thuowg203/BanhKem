@model IEnumerable<DoAnLapTrinhWeb_QLyTiemBanh.Models.Category>

@{
    ViewData["Title"] = "Danh sách Loại Sản Phẩm";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h1 class="text-center" style="color: #FF8A80;">@ViewData["Title"]</h1>

    <p>
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">Thêm Loại Sản Phẩm</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Mã loại</th>
                <th>Tên loại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TenLoai</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
