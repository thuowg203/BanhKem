@model DoAnLapTrinhWeb_QLyTiemBanh.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin người nhận</h5>
        </div>
        <div class="card-body">
            <p><strong>Tên:</strong> @Model.RecipientName</p>
            <p><strong>Điện thoại:</strong> @Model.RecipientPhone</p>
            <p><strong>Địa chỉ:</strong> @Model.SpecificAddress, @Model.Ward, @Model.District</p>
            <p><strong>Ngày giao dự kiến:</strong> @Model.DeliveryDateTime.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Danh sách sản phẩm</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-bordered mb-0 align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá (đơn vị)</th>
                        <th>Thành tiền</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td class="text-start">@item.Product?.Name</td>
                            <td>@item.Quantity</td>
                            <td class="text-end">@item.Price.ToString("N0") đ</td>
                            <td class="text-end">@((item.Price * item.Quantity).ToString("N0")) đ</td>
                            <td class="text-start">@item.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-end fs-5">
        <strong>Tổng tiền: </strong>
        <span class="text-danger fw-bold">@Model.TotalPrice.ToString("N0") đ</span>
    </div>
</div>
