@model IEnumerable<DoAnLapTrinhWeb_QLyTiemBanh.Areas.Admin.Controllers.UserRolesViewModel>
@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-center" style="color: #FF8A80">👤 Danh sách người dùng</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill me-1"></i> Thêm người dùng
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Tên đăng nhập</th>
                <th>Quyền</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && !Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-muted">Không có người dùng nào.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.Id</td>
                        <td>@item.User.FullName</td>
                        <td>@item.User.Email</td>
                        <td>@item.User.PhoneNumber</td>
                        <td>@item.User.Address</td>
                        <td>@item.User.UserName</td>
                        <td>
                            @if (item.Roles.Any())
                            {
                                @string.Join(", ", item.Roles)
                            }
                            else
                            {
                                <span class="text-muted">Chưa có quyền</span>
                            }
                        </td>
                        <td>
                            <!-- Kiểm tra nếu người dùng có vai trò "Admin" thì không hiển thị nút xóa -->
                            @if (!item.Roles.Contains("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.User.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không thể xóa</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
