@model DoAnLapTrinhWeb_QLyTiemBanh.Models.Order

@if (Model.OrderDetails == null || !Model.OrderDetails.Any())
{
    <div class="text-center text-muted py-4">
        <i class="bi bi-bag-x fs-3"></i>
        <p>Không có sản phẩm nào trong đơn hàng này.</p>
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle text-center mb-0">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>@((item.Price * item.Quantity).ToString("N0")) đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3 fw-bold fs-5">
        Tổng cộng: <span class="text-danger">@Model.TotalPrice.ToString("N0") đ</span>
    </div>
}
