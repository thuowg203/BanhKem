@model IEnumerable<DoAnLapTrinhWeb_QLyTiemBanh.Models.Product>

@{
    ViewData["Title"] = "Combo & Gift";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS tùy chỉnh cho trang này -->
<style>
    body {
        background-color: #fdfdfd; /* Màu nền trắng ngà */
    }

    .product-grid-page {
        font-family: 'Helvetica Neue', sans-serif;
    }

    /* Thanh lọc và hiển thị */
    .filter-bar {
        padding: 1rem 0;
        margin-bottom: 1.5rem;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
    }

    .filter-button {
        border: 1px solid #ccc;
        background: none;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
    }

    .view-icons .icon {
        font-size: 1.5rem;
        color: #ccc;
        margin-left: 0.75rem;
        cursor: pointer;
    }

        .view-icons .icon.active {
            color: #a4452e; /* Màu cam đất đặc trưng */
        }

    /* Card sản phẩm */
    .product-card {
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .product-image-container {
        position: relative;
        overflow: hidden; /* Ẩn phần zoom thừa và overlay */
        margin-bottom: 1rem;
    }

    .product-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.4s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05); /* Hiệu ứng zoom nhẹ khi hover */
    }

    /* Overlay và nút "Thêm nhanh" */
    .product-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 10px;
        background: linear-gradient(to top, rgba(255,255,255,0.9), rgba(255,255,255,0));
        text-align: center;
        opacity: 0;
        transition: opacity 0.4s ease;
    }


    .product-card:hover .product-overlay {
        opacity: 1; /* Hiện khi hover */
    }

    .btn-quick-add {
        border: 2px solid #a4452e;
        background-color: transparent;
        color: #a4452e;
        font-weight: bold;
        padding: 0.6rem 2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.8rem;
        transition: all 0.3s ease;
    }

        .btn-quick-add:hover {
            background-color: #a4452e;
            color: white;
        }


    /* Nhãn sản phẩm (NEW IN, RE-RELEASE) */
    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 4px 10px;
        font-size: 0.75rem;
        font-weight: bold;
        letter-spacing: 1px;
        z-index: 10;
    }

    /* Thông tin sản phẩm */
    .product-name {
        font-family: 'Georgia', serif; /* Font chữ giống ảnh */
        color: #a4452e;
        font-size: 1.1rem;
        font-weight: 500;
        text-decoration: none;
        display: block;
        margin-bottom: 0.5rem;
    }

        .product-name:hover {
            color: #8c3a25;
        }

    .product-price {
        font-size: 1rem;
        color: #333;
    }

    .price-original {
        text-decoration: line-through;
        color: #999;
        margin-left: 0.5rem;
        font-size: 0.9rem;
    }
</style>

<div class="container product-grid-page my-4">
    <!-- Thanh lọc và hiển thị -->
    <div class="filter-bar d-flex justify-content-between align-items-center">
        <button class="filter-button">
            NỔI BẬT ☰
        </button>
        <div class="view-icons">
            <!-- Bạn có thể dùng icon font hoặc SVG ở đây -->
            <span class="icon">■ ■</span>
            <span class="icon active">■ ■ ■</span>
            <span class="icon">■ ■ ■ ■</span>
        </div>
    </div>

    <!-- Lưới sản phẩm -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="product-card">
                    <div class="product-image-container">

                        <!-- Ảnh sản phẩm - dẫn đến trang chi tiết -->
                        <a asp-action="Details" asp-route-id="@product.Id">
                            @if (!string.IsNullOrEmpty(product.Badge))
                            {
                                <div class="product-badge">@product.Badge.ToUpper()</div>
                            }
                            <img src="/@product.Image" alt="@product.Name" class="product-image" />
                        </a>

                        <!-- Nút Thêm nhanh nằm bên ngoài thẻ <a> -->
                        <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="product-overlay">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn-quick-add">Thêm nhanh</button>
                        </form>

                    </div>

                    <div class="product-info">
                        <a asp-action="Details" asp-route-id="@product.Id" class="product-name">
                            @product.Name
                        </a>
                        <div class="product-price">
                            <span>@product.Price.ToString("N0")₫</span>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>